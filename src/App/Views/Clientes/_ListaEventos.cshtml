@model IEnumerable<App.ViewModels.EventoViewModel>
@using Business.Enums;

<div id="tableDiv">
    <table id="myTable" class="ui celled table" style="width: 100%">
        <thead class="thead-dark">
            <tr>
                <th>
                    Evento
                </th>
                <th>
                    Valor
                </th>
                <th>
                    Nº Convidados
                </th>
                <th>
                    Data
                </th>
                <th>
                    Opções
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Titulo
                    </td>
                    <td>
                        R$ 0.00
                    </td>
                    <td>
                        50 Pessoas
                    </td>
                    <td>
                        @item.DataEvento
                    </td>
                    <td>
                        <a class="btn btn-info" asp-controller="Eventos" asp-action="Details" asp-route-id="@item.Id"><span class="fa fa-search"></span></a>
                        <a class="btn btn-warning" asp-controller="Eventos" asp-action="Edit" asp-route-id="@item.Id"><span class="fa fa-pencil-alt"></span></a>
                        <a class="btn btn-danger" asp-controller="Eventos" asp-action="Delete" asp-route-id="@item.Id"><span class="fa fa-trash"></span></a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>



