@model App.ViewModels.EventoViewModel
@using Business.Enums

@{
    ViewData["Title"] = "Editar Evento";
}

<div class="modal-header">
    <h4 class="modal-title">@ViewData["Title"]</h4>
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">×</span><span class="sr-only">Fechar</span>
    </button>
</div>

<form asp-action="EditarEvento" method="post">

    <div class="modal-body">
        <partial name="_Editar" />

        <div class="form-row">
            <input type="button" class="btn btn-info mr-2" value="Fechar" data-dismiss="modal" />
            <input type="submit" value="Salvar Alterações" class="btn btn-success" />
        </div>

    </div>
</form>
