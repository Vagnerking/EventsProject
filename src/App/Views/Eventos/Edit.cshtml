@model App.ViewModels.EventoViewModel

@{
    ViewData["Title"] = "Editar Evento - " + @Model.Titulo;
}

<br />
<h4><b>@ViewData["Title"]</b></h4>
<hr />

<form asp-action="Edit" method="post">

    <div class="container">
        <partial name="_InfosEvento" />
    </div>

    <br />
    <h4><b>Endereço Do Evento</b></h4>
    <hr />
    <div class="container">
        <partial name="_EnderecoEvento" />
    </div>

    <br />

    <div class="form-row">
        <a class="btn btn-info mr-2" href="javascript:window.history.back();">Voltar</a>
        <input type="submit" value="Salvar Alterações" class="btn btn-success" />
    </div>

</form>

<br />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jQuery-Mask/dist/jquery.mask.min.js"></script>
    <script type="text/javascript"></script>

    <script>
        $(document).ready(function () {

            $('#Valor').mask('#.##0,00', { reverse: true });
            $('#DataEvento').mask('00/00/0000 00:00');
            $('#Endereco_Cep').mask('00.000-000');
            BuscaCep();

        });
    </script>

}