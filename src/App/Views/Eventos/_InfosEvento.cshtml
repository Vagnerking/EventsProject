@model App.ViewModels.EventoViewModel

<div class="form-row">
    <div class="form-group col-12">
        <label asp-for="Titulo" class="control-label"></label>
        <input asp-for="Titulo" class="form-control" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>

    <div class="form-group col-12">
        <label asp-for="Descricao" class="control-label"></label>
        <textarea cols="40" rows="5" asp-for="Descricao" class="form-control"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
</div>


<div class="form-row">
    <div class="form-group col-12 col-sm-6 col-md-4 col-lg-3">
        <label asp-for="ClienteId" class="control-label"></label>
        <select asp-for="ClienteId" class="form-control" asp-items="@(new SelectList(Model.Clientes,"Id","NomeCompleto"))">
            <option></option>
        </select>
        <span asp-validation-for="ClienteId" class="text-danger"></span>
    </div>

    <div class="form-group col-12 col-sm-6 col-md-4 col-lg-3">
        <label asp-for="Convidados" class="control-label"></label>
        <input asp-for="Convidados" class="form-control" />
        <span asp-validation-for="Convidados" class="text-danger"></span>
    </div>

    <div class="form-group col-12 col-sm-6 col-md-4 col-lg-3">
        <label asp-for="Valor" class="control-label"></label>
        <input asp-for="Valor" class="form-control" maxlength="8"/>
        <span asp-validation-for="Valor" class="text-danger"></span>
    </div>

    <div class="form-group col-12 col-sm-6 col-md-4 col-lg-3">
        <label asp-for="DataEvento" class="control-label"></label>
        <input type="text" asp-for="DataEvento" class="form-control" placeholder="01/01/2021 19:30"/>
        <span asp-validation-for="DataEvento" class="text-danger"></span>
    </div>

</div>